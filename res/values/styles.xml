<?xml version="1.0" encoding="utf-8"?>
<resources>
 <!-- REF#0017 -->
 <style name="GreenNature.AbsListView">
  <item name="android:dividerHeight">4sp</item>
  <!--<item name="android:drawSelectorOnTop">true</item>-->
  <!--<item name="android:listSelector">@drawable/listselector</item>-->
  <!--<item name="android:textColor">@drawable/listitemtext</item>-->
 </style>

 <style name="GreenNature.ListView" parent="GreenNature.AbsListView">
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">match_parent</item>
  <item name="android:divider">@drawable/divider</item>
 </style>

 <style name="GreenNature.ExpandableListView" parent="GreenNature.ListView">
  <item name="android:childDivider">@drawable/divider</item>
 </style>

 <style name="GreenNature.Button" parent="@android:style/Widget.Button">
  <item name="android:background">@drawable/gn_buttonbg</item>
  <item name="android:textAppearance">@style/GreenNature.DefaultText</item>
  <!-- Not sure why this is needed, but others have seen this too: REF#0020 -->
  <item name="android:textColor">@color/buttontext</item>
  <item name="android:textSize">16sp</item>
  <item name="android:shadowDx">0</item>
  <item name="android:shadowDy">-1</item>
  <item name="android:shadowRadius">0.2</item>
 </style>

 <style name="GreenNature.TextView">
  <item name="android:layout_width">fill_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:gravity">center</item>
  <item name="android:textSize">16sp</item>
 </style>

 <!-- REF#0021 -->
 <style name="GreenNature.ListItem">
  <!--<item name="android:layout_margin">30dip</item>-->
  <item name="android:paddingRight">30dip</item>
  <item name="android:paddingLeft">30dip</item>
  <item name="android:background">@drawable/listitembg</item>
 </style>

 <style name="GreenNature.ListItemName">
  <item name="android:textSize">20sp</item>
  <item name="android:textColor">@drawable/listitemtext</item>
 </style>
 
 <style name="GreenNature.ListItemDescription" parent="GreenNature.ListItemName">
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:textSize">15sp</item> 
  <item name="android:gravity">right</item>
 </style>
  
 <style name="GreenNature.ListItemGroup" parent="GreenNature.Heading">
  <item name="android:textSize">25sp</item>
  <item name="android:background">@color/itemgroupbg</item>
 </style>
 
 <style name="GreenNature.Heading" parent="GreenNature.TextView">
  <item name="android:background">@color/headingbg</item>
  <item name="android:gravity">center</item>
  <item name="android:textSize">25sp</item>
  <item name="android:textStyle">bold</item>
 </style>

 <style name="GreenNature.ContextMenuText" parent="GreenNature.DefaultText">
  <item name="android:textSize">18sp</item>
 </style>

 <style name="ContextMenuText" parent="GreenNature.TextView">
  <item name="android:textAppearance">@style/GreenNature.DefaultText</item>
  <item name="android:alertDialogStyle">@style/GreenNature.Dialog</item>
 </style>

 <style name="GreenNature.Dialog" parent="@android:style/Theme">
  <item name="android:textColor">@color/foreground</item>
  <item name="android:textStyle">bold</item>
  <item name="android:textSize">18sp</item>
 </style>

 <style name="GreenNature.DefaultText" parent="@android:style/TextAppearance">
  <item name="android:textSize">12sp</item>
  <item name="android:textColor">@color/foreground</item>
  <item name="android:textStyle">bold</item>
 </style>
</resources>
